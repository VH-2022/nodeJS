<form action="/users/update-user" method="POST">
<input type="hidden" name="id" value="#{user_list._id}">
 
    <div class = "form-group">
        <label>First Name</label>
        <input type="text"  class="form-control" name="first_name" placeholder="First Name" value="#{user_list.first_name}">
    </div>
    <div class = "form-group">
        <label>Middle Name</label>
        <input type="text"  class="form-control" name="middle_name" placeholder="Middle Name" value="#{user_list.middle_name}">
    </div>
    <div class = "form-group">
        <label>Last Name</label>
        <input type="text"  class="form-control" name="last_name" placeholder="Last Name" value="#{user_list.last_name}">
    </div>
    <div class = "form-group">
        <label>Email</label>
        <input type="email"  class="form-control" name="email" placeholder="Email" value="#{user_list.email}">
    </div>
<div class="form-group">
<button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
<a class="btn btn-secondary" href="/users/list"><i class="fa fa-list-alt"></i>Cancel</a>
</div>
</form>

